<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:backgroundTint="@color/black"
            android:gravity="left"
            android:text="《"
            android:textColor="#dcdcdc"
            android:textSize="30dp"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="글 작성"
            android:textColor="#dcdcdc"
            android:textSize="20sp"></TextView>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="148dp"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_view"
            android:layout_width="110dp"
            android:layout_height="108dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_line" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-76dp"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <View
        android:background="#dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="5px"/>

    <EditText
        android:id="@+id/edit_Title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:hint="제목을 입력해주세요."
        android:layout_margin="5dp"
        android:textColor="#727272"
        android:textSize="16dp" />

    <View
        android:background="#dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="5px"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/colorSpinner"
            android:layout_width="400dp"
            android:layout_height="45dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <View
        android:background="#dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="5px"/>

    <RadioGroup
        android:id="@+id/RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매"
            android:textSize="16dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"></RadioButton>
        <RadioButton
            android:id="@+id/btn_rental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대여"
            android:textSize="16dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"></RadioButton>
    </RadioGroup>

    <View
        android:background="#dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="5px"/>

    <EditText
        android:id="@+id/edit_price"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:hint="￦ 가격"
        android:layout_margin="5dp"
        android:textColor="#727272"
        android:textSize="16dp" />

    <View
        android:background="#dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="5px"/>

    <EditText
        android:id="@+id/edit_explain"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:gravity="top"
        android:hint="상품 설명(10자 이상)"
        android:textColor="#727272"
        android:textSize="16dp" />

    <View
        android:background="#dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="5px"/>
    <Button
        android:id="@+id/btn_pic"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FF000000"
        android:text="사진 등록하기"
        android:layout_marginTop="5dp"
        android:textColor="#dcdcdc"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FF000000"
        android:text="상품 등록하기"
        android:layout_marginTop="5dp"
        android:textColor="#dcdcdc"
        android:textSize="20dp"
        android:textStyle="bold" />


</LinearLayout>